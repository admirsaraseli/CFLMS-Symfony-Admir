{% extends 'base.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
<style>
    .hide {
        visibility: hidden;
    }
</style>

    {% for flashError in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
    {% endfor %}

    <div class="container mx-auto">
        <div class="rounded-lg col-sm-5 mx-auto p-4 text-info system">
            {{ form_start(registrationForm) }}
                <h3 class="mb-4 font-weight-normal">Register</h3>
                {{ form_row(registrationForm.email) }}
                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
                }) }}
                {{ form_row(registrationForm.agreeTerms) }}

                <button type="submit" class="btn btn-lg btn-info mt-5">Register</button>
                <a href="/login" class="btn btn-lg btn-outline-info mt-5">Sign in</a>
            {{ form_end(registrationForm) }}
        </div>
    </div>
{% endblock %}
